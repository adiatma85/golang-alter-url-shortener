{
    "Meta": {
        "Title": "Go-Template",
        "Description": "New Template for Golang",
        "Host": "localhost:8080",
        "Basepath": "/",
        "Version": ""
    },
    "Gin": {
        "Host": "localhost",
        "Port": "8080",
        "Mode": "debug",
        "Timeout": "1000s",
        "ShutdownTimeout": "10s",
        "LogRequest": "true",
        "LogResponse": "true",
        "CORS": {
            "Mode": "allowall"
        },
        "Meta": "$ref:#/Meta",
        "Swagger": {
            "Basicauth": {
                "Password": "swagger",
                "Username": "admon"
            },
            "Enabled": "true",
            "Path": "/swagger"
        },
        "Platform": {
            "BasicAuth": {
                "Password": "platform",
                "Username": "admon"
            },
            "Enabled": "true",
            "Path": "/platform"
        },
        "Dummy": {
            "Enabled": "true",
            "Path": "/dummy"
        },
        "Instrument": {
            "Metrics": {
                "Enabled": "true",
                "Path": "/metrics",
                "BasicAuth": {
                    "Username": "admon",
                    "Password": "instrument"
                }
            }
        },
        "Profiler": {
            "Pprof": {
                "Enabled": "true",
                "PathPrefix": "/pprof",
                "BasicAuth": {
                    "UserName": "admon",
                    "Password": "profiler"
                }
            }
        }
    },
    "Log": {
        "Level": "debug"
    },
    "SQL": {
        "UseInstrument": "true",
        "LogQuery": "true",
        "Driver": "mysql",
        "Follower": {
            "Host": "127.0.0.1",
            "Port": "3306",
            "DB": "template_db",
            "User": "root",
            "Password": "root",
            "SSL": null,
            "Schema": null,
            "Options": {
                "MaxLifeTime": "",
                "MaxIdle": "25",
                "MaxOpen": "25"
             }
        },
        "Leader": {
            "Host": "127.0.0.1",
            "Port": "3306",
            "DB": "template_db",
            "User": "root",
            "Password": "root",
            "SSL": null,
            "Schema": null,
            "Options": {
                "MaxLifeTime": "",
                "MaxIdle": "25",
                "MaxOpen": "25"
             }
        }
    },
    "Instrument": {
        "Metrics": {
            "Enabled": "true"
        }
    },
    "Redis": {
        "Protocol": "",
        "Host": "localhost",
        "Port": "6379",
        "Username": "",
        "Password": "",
        "TLS": {
            "Enabled": "",
            "InsecureSkipVerify": ""
        }
    },
    "Translator":{
